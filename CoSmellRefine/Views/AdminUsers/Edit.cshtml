@model CoSmellRefine.Models.ViewModels.AdminUsersViewModel

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "CoSmellRefine";

}


<div class="py-2">
    <div class="container">
        <a asp-controller="AdminUsers" asp-action="List" class="btn dark-btn mb-5">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <h1>Edit User</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Password"/>
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" id="name" asp-for="Username" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" id="displayName" asp-for="Email" readonly />
        </div>
        <div class="mb-3">
            <fieldset class="form-group">

                <legend class="form-label"> Select a user role </legend>
                <div class="form-check">
                    <input type="checkbox" id="chkDeveloperRole" class="form-check-input"
                           asp-for="DeveloperRoleCheckbox" />
                    <label class="form-check-label" for="chkDeveloperRole">Developer</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" id="chkModeratorRole" class="form-check-input"
                           asp-for="ModeratorRoleCheckbox" />
                    <label class="form-check-label" for="chkModeratorRole">Moderator</label>
                </div>
            </fieldset>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn dark-btn">Update</button>
        </div>
    </form>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
