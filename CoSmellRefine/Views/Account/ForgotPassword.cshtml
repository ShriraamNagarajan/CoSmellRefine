@model CoSmellRefine.Models.ViewModels.ForgotPasswordViewModel
@{
}

<div class="row" style="background: #E5F0FF; min-height:85vh;">
    <div class="col-12 d-flex justify-content-center align-items-center">
        <div class="card p-5 rounded" style="width: 100%; max-width: 500px;">
            <h2 class="text-center">Forgot Password</h2>
            <form method="post">
                <div class="form-group mb-4">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" asp-for="Email" required />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="d-flex justify-content-center align-items-center mt-5">
                    <button type="submit" class="btn light-btn">Send Reset Link</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}