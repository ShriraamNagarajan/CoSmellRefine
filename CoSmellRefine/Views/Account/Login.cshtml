@model CoSmellRefine.Models.ViewModels.LoginViewModel
@{

}
<div class="row" style="background: #E5F0FF; min-height:85vh;">
    <div class="col-6 d-flex justify-content-center align-items-center">
        <figure class="figure w-100 h-100 text-center mt-3 data-tilt data-tilt-scale=" 1.1"">
            <img src="/images/login_banner.svg" class="figure-img img-fluid rounded" alt="Login Banner" data-aos="fade-up">
        </figure>
    </div>
    <div class="col-5 p-5">
        <p class="display-4 landing-page-heading text-center mt-3">Welcome back!</p>
        <form class="p-3" method="post">
            <div class="m-5">
                <label class="form-label">Username</label>
                <input type="text" id="username" class="form-control" asp-for="Username" required />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="m-5">
                <label class="form-label">Password</label>
                <input type="password" id="password" class="form-control" asp-for="Password" required />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="d-flex justify-content-center align-items-center mt-5">
                <button type="submit" class="btn light-btn">Sign In</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function () {
            // Initialize AOS (Animate On Scroll)
            AOS.init();
        });
    </script>
}

