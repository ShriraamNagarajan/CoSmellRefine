@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "CoSmellRefine";
}
<div class="sidebar-container">
    <partial name="_DeveloperSidebar" />
    <section class="user-main dashboard-content p-5">
        <div class="container mt-5">
            <a asp-controller="GitHubRepository" asp-action="RepositoryContent" asp-route-owner='@ViewData["Owner"]' asp-route-repo='@ViewData["Repo"]' class="btn dark-btn mb-5">
                <i class="fas fa-arrow-left"></i> Back
            </a>

            <h2 class="m-0">File: @ViewData["FileName"]</h2>
            <div class="card mt-2">
                <div class="card-body">
                    <div class="d-flex justify-content-end align-items-center">
                        <button class="btn btn-outline-dark copy-btn" data-clipboard-target="#fileContent">
                            <i class="bi bi-clipboard"></i> Copy
                        </button>
                    </div>
           
                    <pre id="fileContent">@ViewData["FileContent"]</pre>
                </div>
               
            </div>

        </div>
    </section>
</div>

@section Scripts {
    <script src="/js/developer_sidebar.js"></script>
    <script>
        new ClipboardJS('.copy-btn');
    </script>
}
